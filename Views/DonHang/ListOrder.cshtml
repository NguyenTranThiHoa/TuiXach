@model IEnumerable<TuiXach.ViewModel.OrderViewModel>

@{
    ViewBag.Title = "ListOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .about_name {
        background-color: cornsilk;
        margin-top: 180px;
        padding: 7px 0px;
        width: 100%;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        font-family: Cambria;
    }
</style>
<div class="about_name">
    <h2>DANH SÁCH ĐƠN HÀNG</h2>
</div>
<!------------------------------------------------------------------------>
<style>
    .Processing, .Confirmed, .Shipping, .Delivered, .Cancelled {
        display: block;
    }

    .Processing {
        background-color: orange;
    }

    .Confirmed {
        background-color: yellowgreen;
    }

    .Shipping {
        background-color: lightblue;
    }

    .Delivered {
        background-color: green;
    }

    .Cancelled {
        background-color: red;
    }

    .card {
        margin: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #ddd;
        padding: 10px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        .table th {
            background-color: #93aa65;
            color: black;
        }

    .btn {
        display: inline-block;
        padding: 8px 16px;
        text-decoration: none;
        background-color: #007bff;
        color: #fff;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .btn-warning1 {
        background-color: #ffc107;
        color: #212529;
    }

    .btn-warning2 {
        background-color: #007bff;
        color: #212529;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .pending {
        color: orange;
    }

    .completed {
        color: green;
    }
</style>
<!------------------------------------------------------------------------------------------------------->
@if (Session["UserID"] != null)
{
    <div>
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã đơn hàng</th>
                                <th>Tên khách hàng</th>
                                <th>Ngày đặt</th>
                                <th>Trạng thái đơn hàng</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.OrderID</td>
                                    <td>@order.OrderID</td>
                                    <td>@order.FullName</td>
                                    <td>@order.NgayDat</td>
                                    <td>@order.TrangThaiDonHang</td>
                                    <td>
                                        <a class="btn btn-warning1" href="@Url.Action("ViewOrders", "DonHang", new { id = order.OrderID })">Xem</a>
                                        <a class="btn btn-warning2" href="@Url.Action("DeleteOrder", "DonHang", new { id = order.OrderID })">Hủy</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <style>
        .hinh_anh {
            text-align: center;
            padding: 10px 0px;
        }
    </style>

    <div class="hinh_anh">
        <img src="~/image/anh_logo_lienhe/banner-thong-bao-gio-lam-viec.png" style="width: 1300px">
    </div>
    <div class="hien_chu" style="margin-top: 50px; text-align:center">
        <h2>Vui lòng đăng nhập để xem các đơn hàng của bạn!</h2>
    </div>
}