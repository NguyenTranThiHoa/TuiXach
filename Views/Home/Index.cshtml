<style>
    .tuixach {
        display: grid;
        grid-template-columns: repeat(4,1fr);
        gap: 20px;
        position: relative;
        top: 10px;
        padding: 20px;
    }
    .anh {
        float: left;
        width: auto;
        padding: 0 6px;
    }

    .anh_tiep {
        border: 1px solid #ccc;
        overflow: hidden;
        transition: .5s ease;
        position: relative;
    }

    .anh_tiep:hover {
        border: 1px solid #777;
    }

    .anh_tiep img {
        width: 100%;
        height: 380px;
        transition: transform 0.5s ease;
    }

    .anh_tiep:hover img {
        transform: scale(1.1);
    }

    .desc {
        padding: 15px;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.8);
        font-weight: bold;
    }

    .clearfix:after {
        content: "";
        display: table;
        clear: both;
    }

    /***************************************/
    .pagination {
        display: flex;
        padding-left: 0;
        list-style: none;
        border-radius: 0.25rem;
    }

    .page-item {
        margin: 0 2px;
    }

    .page-link {
        position: relative;
        display: block;
        padding: 0.5rem 0.75rem;
        margin-left: -1px;
        line-height: 1.25;
        color:black;
        background-color: darkorange;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
    }

    .page-link:hover {
        z-index: 2;
        color: #0056b3;
        text-decoration: none;
        background-color:burlywood;
        border-color: #dee2e6;
    }

    .page-item.active .page-link {
        z-index: 1;
        color: #fff;
        background-color: burlywood;
        border-color: #007bff;
    }

    .page-item.disabled .page-link {
        color: #6c757d;
        pointer-events: none;
        cursor: auto;
        background-color: #fff;
        border-color: #dee2e6;
    }

    /* Center Pagination */
    .pagination.justify-content-center {
        justify-content: center;
    }

</style>
