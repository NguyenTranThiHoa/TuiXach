@model List<TuiXach.Models.SanPham>
@{
    ViewBag.Title = "UuDai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .about_name {
        background-color: cornsilk;
        margin-top: 180px;
        padding: 7px 0px;
        width: 100%;
    }

    h2 {
        text-align: center;
        font-family: Cambria;
        font-weight: bold;
    }

    .hinh_anh {
        text-align: center;
        padding: 10px 0px;
    }

    .about_vanban p {
        text-align: left;
        padding: 5px 35px;
        justify-content: center;
    }

    /****************************/
    .tuido {
        display: grid;
        grid-template-columns: repeat(4,1fr);
        gap: 20px;
        position: relative;
        top: 10px;
        padding: 20px;
    }

    .anh {
        float: left;
        width: auto;
        padding: 0 6px;
    }

    .anh_tiep {
        border: 1px solid #ccc;
        overflow: hidden;
        transition: .5s ease;
        position: relative;
    }

        .anh_tiep:hover {
            border: 1px solid #777;
        }

        .anh_tiep img {
            width: 100%;
            height: 380px;
            transition: transform 0.5s ease;
        }

        .anh_tiep:hover img {
            transform: scale(1.1);
        }

    .desc {
        padding: 15px;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.8);
        font-weight: bold;
    }

    .clearfix:after {
        content: "";
        display: table;
        clear: both;
    }

    /***************************************/
    .pagination {
        display: flex;
        padding-left: 0;
        list-style: none;
        border-radius: 0.25rem;
    }

    .page-item {
        margin: 0 2px;
    }

    .page-link {
        position: relative;
        display: block;
        padding: 0.5rem 0.75rem;
        margin-left: -1px;
        line-height: 1.25;
        color: black;
        background-color: darkorange;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
    }

        .page-link:hover {
            z-index: 2;
            color: #0056b3;
            text-decoration: none;
            background-color: burlywood;
            border-color: #dee2e6;
        }

    .page-item.active .page-link {
        z-index: 1;
        color: #fff;
        background-color: burlywood;
        border-color: #007bff;
    }

    .page-item.disabled .page-link {
        color: #6c757d;
        pointer-events: none;
        cursor: auto;
        background-color: #fff;
        border-color: #dee2e6;
    }

    .pagination.justify-content-center {
        justify-content: center;
    }
    .discount-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #ff0000;
        color: white;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 5px;
        z-index: 10; 
    }
</style>
<div class="about_name">
    <h2>SẢN PHẨM ƯU ĐÃI</h2>
</div>

<div class="hinh_anh">
    <img src="~/image/anh_logo_lienhe/banner-dat-di-cho-chi.jpg" style="width: 1300px">
</div>

<div class="about_vanban">
    <h5 style="text-align: center; font-size: 25px">THIHOA STORE – DẪN ĐẦU XU HƯỚNG THỜI TRANG</h5>
    <p style="font-size: 18px">
        Tại THIHOA Store, chúng tôi luôn chú trọng đến chất lượng sản phẩm và sự hài lòng của khách hàng. Mỗi chiếc túi xách được chọn lọc kỹ lưỡng,
        từ chất liệu đến thiết kế, nhằm mang đến cho bạn trải nghiệm mua sắm hoàn hảo nhất.
        Bên cạnh đó, đội ngũ nhân viên nhiệt tình và chuyên nghiệp của chúng tôi luôn sẵn sàng tư vấn và hỗ trợ bạn chọn lựa những sản phẩm ưng ý nhất.
    </p>
</div>

<hr style=" font-size: 50px; margin-left:200px; margin-right: 200px; border: 5px dashed #0056b3">

<div class="tuido">
    @if (Model != null && Model.Any())
    {
        foreach (var product in Model)
        {
            <div class="tuixach" style="position: relative; top: 10px;">
                <div class="anh">
                    <div class="anh_tiep">
                        <div class="discount-badge">Giảm -20%</div>
                        <a href="@Url.Action("ChiTietSanPham", "SanPham", new { @maSanPham = product.SanPhamID })" title="Xem chi tiết">
                            <img src="~/image/Anh_tuixach/@product.HinhAnh" alt="anh1" width="600" height="400">
                        </a>
                        <div class="name" style="text-align:center; margin-top: 20px">@product.TenSanPham</div>
                        <div class="desc" style="font-weight: bold">@Html.FormatValue(product.Gia, "{0:#,###}")VND</div>
                        @*<button class="btn_buy" style="text-align:center; padding: 9px 12px; background-color:antiquewhite; margin-left:50px; border-radius: 4px; border: 2px; position:relative; bottom:10px; ">
                            <i class="bi bi-cart-fill" style=" font-weight: bold;"></i>
                            Thêm vào giỏ hàng
                        </button>*@
                    </div>
                </div>
            </div>
            break;
        }
    }
    else
    {
        <p>Không có sản phẩm nào trong phân loại này.</p>
    }
</div>




