@model TuiXach.Models.Customer

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<!---------------ĐĂNG KÝ--------------------->
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "w3l-login-form" }))
{
    <h2>ĐĂNG KÝ</h2>
    <div class="w3l-form-group">
        <label>Email:</label>
        <div class="group">
            <i class="fas fa-user"></i>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập vào Email", required = "required" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="w3l-form-group">
        <label>Username:</label>
        <div class="group">
            <i class="fas fa-user"></i>
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Nhập vào Username", required = "required" })
            @Html.ValidationMessageFor(m => m.Username)
        </div>
    </div>
    <div class="w3l-form-group">
        <label>Password:</label>
        <div class="group">
            <i class="fas fa-unlock"></i>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập vào Password", required = "required" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    <div class="forgot">
        <p><input type="checkbox"> Nhớ mật khẩu</p>
    </div>
    <button type="submit">Đăng ký</button>
    <p class="w3l-register-p">Bạn đã có tài khoản?<a href="@Url.Action("Login", "Account")" class="register"> Đăng nhập</a></p>
}

